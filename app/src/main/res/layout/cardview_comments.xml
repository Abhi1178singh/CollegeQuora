<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="#053364"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    android:id="@+id/cardview_others_comment"
    xmlns:android="http://schemas.android.com/apk/res/android"
   >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
       <TextView
           style="@style/Base.TextAppearance.AppCompat.Headline"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#ffffff"
           android:textSize="9dp"
           android:text="1502913112"
           android:id="@+id/user"/>
        <TextView
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="Sample Comment"
            android:textSize="15dp"
            android:layout_below="@+id/user"
            android:id="@+id/textView_others_comment"/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
